header.site-header.site-header--compact(role="header", data-js="site-header")
	img.site-header--img.hidden(src="images/bg-header-home.png", alt="Background for site header section")
	.container
		include ../menus/navigation
		include ../menus/offcanvas-standard
		.site-header--wrap
			form.site-header--form
				.form-group.site-header--service
					label.sr-only(for='selectService') Please select a Service
					select#selectService.selectpicker
						option Services
						option For Rents
						option For Sales
				.form-group.site-header--search
					.input-group
						label.sr-only(for='inputFindService') Find a Service
						input#inputFindService.form-control(type='text', placeholder="Find a Service", aria-label="Find a Service", aria-describedby='inputFindService')
						.input-group-append
							button.btn(type='button')
								span.fas.fa-search
				.form-group.site-header--location
					label.sr-only(for='selectLocation') Please select a Location
					select#selectLocation.selectpicker
						optgroup(label="America")
							option Montreal, Ontario, Canada
							option Toronto, Ontario, Canada
						optgroup(label="Asia")
							option New Delhi, India
							option Thimbirigasyaya, Sri Lanka
							option Tokyo, Japan
						optgroup(label="Australia")
							option Sydney, Australia
							option Christchurch, New Zealand
			nav.site-header--breadcrumb(aria-label='breadcrumb', role="navigation")
				ol.breadcrumb
					li.breadcrumb-item
						a.breadcrumb-link(href='#') Services
					li.breadcrumb-item
						a.breadcrumb-link(href='#') Contractors
					li.breadcrumb-item.active(aria-current='page')
						span.breadcrumb-text Plumbers
