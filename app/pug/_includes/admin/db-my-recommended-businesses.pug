.site-admin
	.container-fluid
		.row
			// Dasboard Sidebar Menu
			aside.admin-nav.col-lg-3.col-md-4
				include db-sidebar-navigation	
			// Dasboard Content
			main.admin-content.col-lg-9.col-md-8(role="main")
				h1.page-title My Recommended Businesses
				// Recommended Busines List
				section#recommendedBusinessList.admin-blocks
					.search-business.d-md-flex
						select.form-control.selectpicker.align-self-start
								option(value="services") Services
								option(value="for-rents") For Rents
								option(value="for-sales") For Sales
						.input-group.justify-content-md-between
							input.form-control(type='text', placeholder="Find a Business", data-js="findServiceTypeahead")
							.input-group-append
								button.btn.btn-secondary(type='button') Add
					.business-groups
						.service-group
							h6 Services
							.table-responsive(data-business-category="cleaners")
