#modalLeaveReview.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLogin', aria-hidden='true')
	.modal-dialog.modal-dialog-centered(role='document')
		.modal-content
			.modal-header
				h5#modalLogin.modal-title(role="heading") Leave a Review
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') Ã—
			form
				.modal-body
						.form-group--md
							input#reviewerFirstName.form-group--md-input(type='text', required)
							span.form-group--md-highlight
							span.form-group--md-bar
							label.form-group--md-label(for='reviewerFirstName') First Name
						.form-group--md
							input#reviewerLastName.form-group--md-input(type='text', required)
							span.form-group--md-highlight
							span.form-group--md-bar
							label.form-group--md-label(for='reviewerLastName') Last Name
						.form-group--md
							input#reviewerEmail.form-group--md-input(type='text', required)
							span.form-group--md-highlight
							span.form-group--md-bar
							label.form-group--md-label(for='reviewerEmail') Email Address
						.form-group--md
							textarea#reviewerMessage.form-group--md-input(rows="5", required)
							span.form-group--md-highlight
							span.form-group--md-bar
							label.form-group--md-label(for='reviewerMessage') Add Your Review
						.form-group
							label(for='reviewRating') Add a Star Rating
							.search--tab-list-item-stars
								select#reviewRating.form-control(data-js="search--tab-list-item-stars", required)
									option(value='1') 1
									option(value='2') 2
									option(value='3') 3
									option(value='4') 4
									option(value='5') 5
				.modal-footer
					button.btn.btn-secondary(type="button" data-dismiss="modal") Cancel
					button.btn.btn-primary(type="submit") Submit