#modalLeaveReview.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalReview', aria-hidden='true')
	.modal-dialog.modal-dialog-centered(role='document')
		.modal-content
			.modal-header
				h5.modal-title(role="heading") Leave a Review
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') Ã—
			form
				.modal-body
					.form-group
						label(for="reviewTitle") Add a Review Title
						input#reviewTitle.form-control(type="email", value="", required, tabindex="3")
					.form-group
						label(for="reviewerMessage") Add a Review Message
						textarea#reviewerMessage.form-control(rows="5", required, value="")
					.form-group
						label(for='reviewRating') Add a Star Rating
						.search--tab-list-item-stars
							select#reviewRating.form-control(data-js="search--tab-list-item-stars", required)
								option(value='1') 1
								option(value='2') 2
								option(value='3') 3
								option(value='4') 4
								option(value='5') 5
				.modal-footer
					button.btn.btn-secondary(type="button" data-dismiss="modal") Cancel
					button.btn.btn-primary(type="submit") Submit