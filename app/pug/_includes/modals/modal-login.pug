#modalLogin.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLogin', aria-hidden='true')
	.modal-dialog.modal-dialog-centered(role='document')
		.modal-content
			.modal-header
				h5#modalLogin.modal-title(role="heading") Login
				button.close(type='button', data-dismiss='modal', aria-label='Close')
					span(aria-hidden='true') Ã—
			.modal-body
				.form-group
					label.sr-only(for='popoverEmail') Enter email address
					input#popoverEmail.form-control.popover-email(placeholder='Email')
				.form-group
					label.sr-only(for='popoverPassword') Enter password
					input#popoverPassword.form-control.popover-password(placeholder='Password')
				.form-group.popover-resets
					a.popover-reset-password(href='forgot-password.html', role="link") Forgot Password?
					a.popover-login(href='#', role="link") Login
				p.popover-linebreak
					span or login via:
				.form-group
					a.btn.btn-block.popover-social.popover-facebook(href='http://facebook.com', target='_blank', role="link")
						span.popover-icon.fab.fa-facebook-square
						| Facebook
					a.btn.btn-block.popover-social.popover-google(href='http://plus.google.com', target='_blank', role="link")
						span.popover-icon.fab.fa-google-plus-square
						| Google
					a.btn.btn-block.popover-social.popover-linkedin(href='http://linkedin.com', target='_blank', role="link")
						span.popover-icon.fab.fa-linkedin
						| Linkedin